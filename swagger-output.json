    "/api/v1/course/list": {
      "get": {
        "tags": ["Courses"],
        "summary": "取得課程",
        "description": "取得所有課程",
        "responses": {
          "200": {
            "description": "取得課程列表成功",
            "schema": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
      },
    "/api/v1/course/course-category": {
      "get": {
        "tags": ["Courses"],
        "summary": "取得課程分類列表",
        "description": "取得所有課程分類（如麵包、蛋糕、餅乾等）",
          "responses": {
            "200": {
              "description": "成功取得分類清單",
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "example": "aabbccdd-1122-3344-5566-77889900" },
                    "name": { "type": "string", "example": "麵包" }
                  }
                }
              }
            }
          }
      }
    },
    "/api/v1/course/{courseId}/ratings": {
      "post": {
        "tags": ["Courses"],
        "summary": "新增評價",
        "description": "新增一筆評價到指定課程。",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "課程 ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["rating_score", "review_text"],
              "properties": {
                "rating_score": {
                  "type": "integer",
                  "example": 5,
                  "description": "評分（1~5）"
                },
                "review_text": {
                  "type": "string",
                  "example": "手工餅乾很好吃，會持續練習！",
                  "description": "評論文字"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "更新評價成功",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "boolean", "example": true },
                "message": { "type": "string", "example": "更新評價成功" },
                "data": {
                  "type": "object",
                  "properties": {
                    "user_id": { "type": "string", "example": "ee0756a2-0add-4092-9b04-14a32183e8f6" },
                    "course_id": { "type": "string", "example": "1c733528-e70f-42f6-948a-ea21abe9e36d" },
                    "rating_score": { "type": "integer", "example": 5 },
                    "review_text": { "type": "string", "example": "手工餅乾很好吃，會持續練習！" },
                    "id": { "type": "string", "example": "d1d98cd0-0917-46fd-88f1-a689b1543541" },
                    "created_at": { "type": "string", "format": "date-time", "example": "2025-06-04T11:48:24.206Z" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "新增失敗"
          }
        }
      }
    },

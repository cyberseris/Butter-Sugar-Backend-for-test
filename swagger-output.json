    "/api/v1/cart/": {
      "get": {
        "tags": ["Cart"],
        "summary": "取得購物車內容",
        "description": "取得購物車內容",
        "responses": {
          "200": {
            "description": "取得購物車成功",
            "schema": {
              "type": "object",
              "properties": {
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Cart"],
        "summary": "加入課程到購物車",
        "description": "將指定課程加入購物車",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "course_id": {
                  "type": "string",
                  "example": "1c733528-e70f-42f6-948a-ea21abe9e36d"
                }
              },
              "required": ["course_id"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功加入課程到購物車",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "成功加入課程到購物車"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "item_count": {
                      "type": "integer",
                      "example": 1
                    },
                    "total_price": {
                      "type": "integer",
                      "example": 1200
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/cart/merge": {
      "post": {
        "summary": "登入後整合購物車",
        "description": "將多個課程加入購物車（登入後）",
        "tags": ["Cart"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "course_ids": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "example": [
                    "16b4b875-e65f-46c5-b6db-bb5a0145c9e5",
                    "8ce78c0a-7c9c-4e47-a3b1-00a1ca832587"
                  ]
                }
              },
              "required": ["course_ids"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功加入課程到購物車",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "成功加入課程到購物車"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "item_count": {
                      "type": "integer",
                      "example": 3
                    },
                    "total_price": {
                      "type": "integer",
                      "example": 3600
                    },
                    "errors": {
                      "type": ["string", "null"],
                      "example": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/cart/checkout": {
      "post": {
        "tags": ["Cart"],
        "summary": "結帳(請使用網頁執行結帳，因會跳轉頁面)",
